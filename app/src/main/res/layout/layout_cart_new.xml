<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/product_img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cam1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/product_title_tv"
                        style="@style/HeadingStyleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cannon Siko 5D" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/product_options_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingStart="@dimen/activity_horizontal_margin">

                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <ImageButton
                    android:id="@+id/update_cart_ibtn_plus"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@color/colorPrimaryDark"
                    app:srcCompat="@drawable/ic_add_circle_outline" />

                <TextView
                    android:id="@+id/product_qty_tv"
                    android:layout_width="50dp"
                    android:layout_height="36dp"
                    android:background="@drawable/search_selector_rectangle"
                    android:gravity="center"
                    android:text="1" />

                <ImageButton
                    android:id="@+id/update_cart_ibtn_minus"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@color/colorAccent3"
                    app:srcCompat="@drawable/ic_remove_circle_outline" />

                <TextView
                    android:id="@+id/product_price_tv"
                    style="@style/HeadingStyleTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="1x110"
                    android:textColor="@color/colorPrimaryDark" />

                <ImageView
                    android:id="@+id/remove_cart_iv"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_delete_forever" />

            </LinearLayout>

        </FrameLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>