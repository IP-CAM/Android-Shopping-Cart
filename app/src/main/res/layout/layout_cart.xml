<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/outline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/product_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/cam1" />

                <TextView
                    android:id="@+id/product_name_val_tv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="Cannon Siko 5D" />

                <LinearLayout
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/box_outline">

                    <EditText
                        android:id="@+id/qty_spinner"
                        style="@style/CustomETStyle"
                        android:layout_width="60dp"
                        android:layout_height="36dp"
                        android:background="@drawable/search_selector_rectangle"
                        android:gravity="center"
                        android:text="1" />

                    <ImageButton
                        android:id="@+id/update_cart_icon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@color/colorAccent3"
                        app:srcCompat="@drawable/ic_refresh" />

                    <ImageButton
                        android:id="@+id/remove_cart_icon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@color/colorPrimaryDark"
                        app:srcCompat="@drawable/ic_close" />

                </LinearLayout>


                <TextView
                    android:id="@+id/product_price_val_tv"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="unit price" />

                <TextView
                    android:id="@+id/total_val_tv"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="total price" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>